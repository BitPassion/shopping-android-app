<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="end"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:layout_marginLeft="@dimen/slidinglayerwidth"
    android:layout_marginStart="@dimen/slidinglayerwidth"-->

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/slidingContents"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_sortby"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="@string/fragment_sliding_sort_shop_items_by_shop_text_sortby_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/border_zero"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sortby"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/header_criterion"
            android:text="@string/fragment_sliding_sort_shop_items_by_shop_header_criterion_text"
            android:layout_below="@id/border_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/sort_bar"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/header_criterion"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sort_rating"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="@string/fragment_sliding_sort_shop_items_by_shop_sort_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:id="@+id/sort_popularity"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/fragment_sliding_sort_shop_items_by_shop_sort_popularity_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>




        <LinearLayout
            android:id="@+id/sort_row_three"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:layout_below="@id/sort_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a_to_z"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="@string/fragment_sliding_sort_shop_items_by_shop_a_to_z_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:id="@+id/item_price"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/fragment_sliding_sort_shop_items_by_shop_item_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/border_one"
            android:background="#55000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sort_row_three"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/header_sort_order"
            android:text="@string/fragment_sliding_sort_shop_items_by_shop_header_sort_order_text"
            android:layout_below="@id/border_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/row_sort_order"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/header_sort_order"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/gplus_color_2"
                android:textColor="@color/white"
                android:id="@+id/sort_ascending"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_ascending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sort_descending"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_descending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <TextView
            android:id="@+id/border_two"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/row_sort_order"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



