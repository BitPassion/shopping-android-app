<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:orientation="vertical"
    android:stretchColumns="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp">

        <TextView
            android:paddingStart="10dp"
            android:layout_weight="2"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:id="@+id/transaction_id"
            android:text="@string/list_item_transaction_new_transaction_id_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="Amount"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>


        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="Balance"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>

    </TableRow>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="#20000000"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>

    <TableRow>


        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transaction_timestamp"
                android:layout_marginTop="0dp"
                android:text="@string/list_item_transaction_new_transaction_timestamp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textColor="@color/phonographyBlue"
                android:id="@+id/transaction_title"
                android:textSize="15sp"
                android:text="@string/list_item_transaction_new_transaction_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="@color/orangeDark"
                android:id="@+id/transaction_description"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                android:text="@string/list_item_transaction_new_transaction_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/transaction_amount"
            android:textSize="17sp"
            android:text="17\n[Debit]"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="17sp"
            android:padding="5dp"
            android:id="@+id/transaction_balance"
            android:text="@string/list_item_transaction_new_transaction_balance_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </TableRow>


</TableLayout>