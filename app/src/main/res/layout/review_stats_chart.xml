        app:layout_constraintBottom_toBottomOf="@+id/bar_three"
        app:layout_constraintTop_toTopOf="@+id/bar_three"
        android:text="@string/review_stats_chart_eight_star_bar_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <!--Bar Four-->



