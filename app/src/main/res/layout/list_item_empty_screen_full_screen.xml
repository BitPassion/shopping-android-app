<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginBottom="100dp"
        android:id="@+id/graphic_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp" />




    <TextView
        android:id="@+id/copyrights"
        app:layout_constraintEnd_toEndOf="@id/graphic_image"
        app:layout_constraintStart_toStartOf="@id/graphic_image"
        app:layout_constraintTop_toBottomOf="@id/graphic_image"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="10sp"
        android:text="@string/list_item_empty_screen_full_screen_copyrights_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:id="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyrights"
        android:text="A title for empty screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="A message to display to the user !"
        android:id="@+id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>